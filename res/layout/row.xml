<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="-1dp"
              android:baselineAligned="true" android:background="@drawable/custom_listview_item" android:clickable="false"
              android:focusable="false">
    <TextView
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" android:layout_gravity="center_vertical"/>
</LinearLayout>