<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="-1dp"
        android:baselineAligned="true" android:background="@drawable/custom_listview_item" android:clickable="false"
        android:focusable="false">
    <TextView
            android:id="@+id/filename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#404041"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" android:layout_marginTop="6dp"/>
</LinearLayout>