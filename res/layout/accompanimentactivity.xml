<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#EDF2F1">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/accompanimentListView"
            android:layout_weight="1" android:layout_marginLeft="15dp" android:layout_marginTop="15dp"
            android:layout_marginRight="15dp" android:choiceMode="singleChoice" android:divider="#edf2f1"
            android:dividerHeight="10dp" android:listSelector="@android:color/darker_gray"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">

        <view class="dif.clogic.custom.CustomProgressBar" android:id="@+id/accompanimentProgress"
              android:layout_width="match_parent"
              android:layout_height="10dp"
              android:layout_gravity="center_horizontal|bottom"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#4A4A4A" android:orientation="horizontal">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accompanimentPlayButton" android:scaleType="fitCenter" android:src="@drawable/play5"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp" android:layout_marginTop="6dp"
                    android:background="@drawable/transparent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재생중인 노래제목"
                    android:id="@+id/playingTitle" android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp" android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>